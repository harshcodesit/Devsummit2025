    <style>
      /* top section */
      .choice{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 50px;
  margin-bottom: 50px;
  flex-wrap: wrap;
}

body{
  background-color: #0C0C0C;
}
.chooseCard {
  width: 190px;
  height: 190px;
  background: rgb(103, 225, 255);
  background: rgb(103, 151, 255);
  transition: all 0.4s;
  border-radius: 10px;
  box-shadow: 0px 0px 10px 5px  rgba(0, 0, 0, 0.705);
  font-size: 20px;
  font-weight: 900;
  padding:5px;
  margin: 10px 30px;
  text-decoration: none; 
  color: inherit; 
  display: block;
}

.chooseCard:hover {
  border-radius: 15px;
  cursor: pointer;
  transform: scale(1.2);
  box-shadow: 0px 0px 10px 5px  rgba(0, 0, 0, 0.705);
  background: rgb(103, 151, 255);
  background: rgb(103, 225, 255);
}

.first-content {
  height: 100%;
  width: 100%;
  transition: all 0.4s;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 1;
  border-radius: 15px;
}

.chooseCard:hover .first-content {
  height: 0px;
  opacity: 0;
}

.second-content {
  height: 0%;
  
  width: 100%;
  opacity: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 15px;
  transition: all 0.4s;
  font-size: 0px;
  transform: rotate(90deg) scale(-1);
}

.chooseCard:hover .second-content {
  opacity: 1;
  height: 100%;
  font-size: 1.5rem;
  transform: rotate(0deg);
}









/* sdmkeajdjas */
        .tourHeading{
  display: flex;
  align-items: center;
  justify-content: center;
  
}
.tourHeading h1{
  font-weight: 900;
  font-size: 45px;
  margin-bottom: 50px;
  text-align: center;
}
.tourSection,.carSection,.destinationSection{
  background-color: #0C0C0C;
  width: 100%;
}

/* Tour card css */
.tourCard {
  width: 400px;
  height: 610px;
  padding: .8em;
  background: #f5f5f5;
  margin: 20px 10px;
 
  overflow: visible;
  background: #ffcaa6;
box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
backdrop-filter: blur( 5px );
-webkit-backdrop-filter: blur( 5px );
border-radius: 10px;
border: 1px solid rgba( 255, 255, 255, 0.18 );
  
 }
 .tours,.cars{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  width: 100%;
 }
 
 .tourCard-img {
  background-color: #ffcaa6;
  height: 60%;
  width: 100%;
  border-radius: .5rem;
  transition: .3s ease;
 }
 
 .tourCard-info {
  padding-top: 10px;
 }
 

 .tourCard-footer {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 10px;
  border-top: 1px solid #ddd;
  margin-bottom: 15px;
 }
 
 /*Text*/
 .text-title {
  font-weight: 900;
  font-size: 1.2em;
  line-height: 1.5;
 }

 .text-body {
  font-size: .9em;
  padding-bottom: 10px;
 }
 
 .tourCard-button {
  border: 1px solid #252525;
  display: flex;
  padding: .3em;
  cursor: pointer;
  border-radius: 50px;
  transition: .3s ease-in-out;
 }
 
 /*Hover*/
 .tourCard-img:hover {
  transform: translateY(-13%);
  box-shadow: rgba(226, 196, 63, 0.25) 0px 13px 47px -5px, rgba(180, 71, 71, 0.3) 0px 8px 16px -8px;
 }
 
 .tourCard-button:hover {
  border: 1px solid #ffcaa6;
  background-color: #ffcaa6;
 }
 
 /* tour button */
 .tourButton {
  --color: rgb(10, 25, 30);
  padding: 0.8em 1.7em;
  background-color: transparent;
  border-radius: .3em;
  position: relative;
  overflow: hidden;
  cursor: pointer;
  transition: .5s;
  font-weight: 400;
  font-size: 17px;
  width: 100%;
  border: 1px solid;
  font-family: inherit;
  text-transform: uppercase;
  color: var(--color);
  z-index: 1;
 }
 
 .tourButton::before, .tourButton::after {
  content: '';
  display: block;
  width: 50px;
  height: 50px;
  transform: translate(-50%, -50%);
  position: absolute;
  border-radius: 50%;
  z-index: -1;
  background-color: var(--color);
  transition: 1s ease;
 }
 
 .tourButton::before {
  top: -1em;
  left: -1em;
 }
 
 .tourButton::after {
  left: calc(100% + 1em);
  top: calc(100% + 1em);
 }
 
 .tourButton:hover::before, .tourButton:hover::after {
  height: 510px;
  width: 510px;
 }
 
 .tourButton:hover {
  color: rgb(103, 151, 255);
 }
 
 .tourButton:active {
  filter: brightness(.8);
 }
 



    </style>
